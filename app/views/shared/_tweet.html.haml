- if current_user
  - current_user.twitter_client.home_timeline.each do |tweet|
    .panel.panel-default
      .panel-body
        .row
          .col-md-2
            = image_tag tweet.user.profile_image_url.to_s
          .col-md-10
            %span
              = tweet.user.name
            %span
              = "@#{tweet.user.screen_name}"
            %span
              = tweet_time(tweet.created_at)
            %p
              = tweet.text
        .row
          .col-md-4
            %a{:href => "#"}
              %span.glyphicon.glyphicon-share-alt
          .col-md-4
            %a{:href => "#"}
              %span.glyphicon.glyphicon-retweet
          .col-md-4
            = button_to "Favorite", {:controller => "users", :action => "favorite", :favorite => tweet.id }
            -# %a{:href => "/favorite", favorite: tweet.id, method: :post }
            -#   %span.glyphicon.glyphicon-star-empty
