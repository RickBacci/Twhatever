-if current_user
  .row.user-profile
    .col-md-12.profile
      .panel.panel-default
        .panel-body
          .row
            .col-md-2
              = image_tag current_user.image
            .col-md-10
              .row
                .col-md-4
                  %span.small
                    tweets
                .col-md-4
                  %span.small
                    following
                .col-md-4
                  %span.small
                    followers
              .row
                .col-md-4
                  %span.small
                    = current_user.twitter_client.user.tweets_count
                .col-md-4
                  %span.small
                    = current_user.twitter_client.user.friends_count
                .col-md-4
                  %span.small
                    = current_user.twitter_client.user.followers_count
  .row
    .col-md-3.blue-border
      %span.small
        = current_user.name
        = "@#{current_user.twitter_client.user.screen_name}"
      %span.small
        = current_user.twitter_client.user.description
      %span.small
        = current_user.twitter_client.user.location

    .col-md-6.main-feed
      = render 'shared/user_timeline'

    .col-md-3.blue-border
      %p Who to follow?
